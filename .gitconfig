[alias]
    st = status
    br = branch
    ci = commit --no-verify
    out = push
    in = pull --rebase --summary
    type = cat-file -t
    dump = cat-file -p
    hi = log --pretty=format:'%h | %ad | %s%d [%an]' --date=short
    hime = log --pretty=format:'%h | %ad | %s' --date=short --author=hein
    hime7 = log --pretty=format:'%h | %ad | %s' --date=short --author=hein --since='7 days ago'
    praise = blame

[core]
    excludesfile = ~/.gitignore
    filemode = false
    editor = vim

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[user]
    name = Hein Haraldson Berg
    email = # email

[push]
    default = current

[merge]
    conflictstyle = diff3
